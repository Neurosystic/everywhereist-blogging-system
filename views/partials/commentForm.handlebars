
<div class="replyCommands commenter{{this.commenter_id}}">
    <div class="commentFormDiv">
        <span class="commenterId" style="display: none">{{this.commenter_id}}</span>
        <p class="reply">Reply to {{this.username}}...</p>
        <div class="replyForm" style="display: none">
            <form method="POST" action="../postComment">
                <input type="text" name="commentId" value="{{this.id}}" style="display: none">
                <input type="text" name="articleId" value="{{this.article_id}}{{article.id}}" style="display: none">
                <textarea rows="4" name="comment" required placeholder="Enter your comment"></textarea>
                <br><br>
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>

    <div class="deleteLink delete{{this.commenter_id}}" style="display: none">
        <a class="commands delete" href="../deleteComment/{{this.id}}">Delete Comment</a>
    </div>

</div>