    <div class="graph">
        <h2>Comments Received Per Day</h2>
        <canvas id="histogram" ></canvas>
    </div>
<script>
    const xArray = [];
    const yArray = [];
    {{#each data}}
        xArray.push(`{{this.date}}`);
        yArray.push({{this.commentCount}});
    {{/each}}

    console.log(xArray, yArray)
    const ctx = document.querySelector("#histogram").getContext('2d');
        const chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: xArray.reverse(),
                datasets: [{
                    label: 'Comments Received',
                    data: yArray.reverse(),
                    backgroundColor: 'rgb(247, 242, 238, 1)',
                    borderWidth: 1,
                    barPercentage: 1,
                    categoryPercentage: 1

                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        scaleLabel: {
                            display: true,
                            labelString: 'Comments Received Per Day'
                        },
                        beginAtZero: false
                    }],
                    xAxes: [{
                        scaleLabel: {
                            display: true,
                            labelString: 'Date'
                        }
                    }]
                }
            }
        });
</script>